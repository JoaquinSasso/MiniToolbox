{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"target": "ES2020",

		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,

		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": ["node"],
		"lib": ["ES2020"]
	},
	"include": ["src"]
}
