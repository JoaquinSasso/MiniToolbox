{
	"hosting": {
		"public": "public",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "/api/metricsSummary",
				"function": {
					"functionId": "metricsSummary",
					"region": "us-central1"
				}
			},
			{
				"source": "/api/metricsDaily",
				"function": {
					"functionId": "metricsDaily",
					"region": "us-central1"
				}
			},
			{
				"source": "/api/ingest",
				"function": {
					"functionId": "ingest",
					"region": "us-central1"
				}
			},
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"headers": [
			{
				"source": "/index.html",
				"headers": [{ "key": "Cache-Control", "value": "no-cache" }]
			},
			{
				"source": "**/*.@(js|css|png|jpg|svg|webp)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000, immutable"
					}
				]
			}
		]
	}
}
